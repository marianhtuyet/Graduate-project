<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="amount_modify_menu_line_tree" model="ir.ui.view">
        <field name="name">amount.modify.menu.line.tree</field>
        <field name="model">amount.modify.menu.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="nutrition_id"/>
                <field name="quantity"/>
                <field name="price"/>
                <field name="is_stock"/>
            </tree>
        </field>
    </record>

    <record id="amount_modify_menu_line_view" model="ir.ui.view">
        <field name="name">amount.modify.menu.line.view</field>
        <field name="model">amount.modify.menu.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="amount_modify_menu_id"/>
                            <field name="nutrition_id"/>
                            <field name="quantity"/>
                            <field name="price"/>
                            <field name="is_stock"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
