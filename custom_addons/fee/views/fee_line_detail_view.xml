<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fee_line_detail_tree" model="ir.ui.view">
        <field name="name">fee.line.detail.tree</field>
        <field name="model">fee.line.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>

    <record id="fee_detail_view" model="ir.ui.view">
        <field name="name">fee.line.detail.view</field>
        <field name="model">fee.line.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
