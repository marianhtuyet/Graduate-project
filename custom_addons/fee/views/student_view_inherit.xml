<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_student_student_inherit_2">
        <field name="name">view.student.student.inherit</field>
        <field name="model">student.student</field>
        <field name="inherit_id" ref="school.view_student_student_form_2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pid']" position="after">
                <field name="customize_code"/>
                <field name="custom_name"/>
            </xpath>
            <xpath expr="//field[@name='standard_id']" position="after">
                <field name="reduce_code"/>
            </xpath>
            <xpath expr="//field[@name='contact_mobile']" position="after">
                <field name="father_name"/>
                <field name="father_job"/>
                <field name="mother_name"/>
                <field name="mother_job"/>
                <field name="phone_father"/>
                <field name="phone_mother"/>
            </xpath>

        </field>
    </record>
