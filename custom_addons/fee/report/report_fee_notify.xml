<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_notify_document">

        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang='vi_VN')"/>
                <div class="page">
                    <h2>
                        <span t-field="o.student_id"/>
                    </h2>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>
                                    <strong>Order</strong>
                                </th>
                                <th name="td_sched_date_h">
                                    <strong>Date</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                    <table class="table table-sm mt48" t-if="o.state!='done'">
                        <thead>
                            <tr>
                                <th>
                                    <strong>Product</strong>
                                </th>
                                <th>
                                    <strong>Quantity</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.line_ids"/>
                            <tr t-foreach="lines" t-as="move">
                                <td>
                                    <span t-field="move.fee_id"/>

                                </td>
                                <td>
                                    <span t-field="move.fee_detail.name"/>
                                    <span t-field="move.amount"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p>
                        <t>
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become
                            available.
                        </t>
                    </p>
                </div>
            </t>
        </t>
    </template>

    <template id="report_fee_notify">
        <t t-foreach="docs" t-as="o">
            <t t-call="fee.report_notify_document"/>
        </t>
    </template>
</odoo>