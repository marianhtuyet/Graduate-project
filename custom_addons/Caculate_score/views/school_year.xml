<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="school_year_tree" model="ir.ui.view">
        <field name="name">school.year.tree</field>
        <field name="model">school.year</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
            </tree>
        </field>
    </record>

    <record id="school_year_view" model="ir.ui.view">
        <field name="name">school.year.view</field>
        <field name="model">school.year</field>
        <field name="arch" type="xml">
            <form>
                <group>
                <field name="name"/>
                </group>
                <group>
                <field name="date_start"/>
                <field name="date_end"/>
                </group>
            </form>
        </field>
    </record>
</odoo>