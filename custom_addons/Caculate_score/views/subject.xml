<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="subject_tree" model="ir.ui.view">
        <field name="name">subject.tree</field>
        <field name="model">subject</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="subject_view" model="ir.ui.view">
        <field name="name">subject.view</field>
        <field name="model">subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>